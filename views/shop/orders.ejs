<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(orders.length>0) { %>
                <ul>
                    <% orders.forEach(order =>{ %>
                        <li>
                            <h1>Order # <%=order._id %></h1>
                            <ul>
                                <% order.products.forEach( p =>{ %>
                                    <li><%= p.productData.title %> (<%= p.quantity %>) </li>
                                <% });%>
                            </ul>
                        </li>    

                    <% }) %>
                </ul>
            <% } else { %>   
            <h1>Nothing there!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>